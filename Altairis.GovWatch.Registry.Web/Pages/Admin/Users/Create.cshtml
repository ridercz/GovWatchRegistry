@page
@model CreateModel
@{ this.ViewBag.Title = "Vytvoření nového uživatele"; }
<h2>@this.ViewBag.Title</h2>
<form method="post">
    <table class="form">
        <tbody>
            <tr>
                <th><label asp-for="Input.UserName"></label></th>
                <td><input asp-for="Input.UserName" /></td>
            </tr>
            <tr>
                <th><label asp-for="Input.DisplayName"></label></th>
                <td><input asp-for="Input.DisplayName" /></td>
            </tr>
            <tr>
                <th><label asp-for="Input.Email"></label></th>
                <td><input asp-for="Input.Email" /></td>
            </tr>
            <tr>
                <th><label asp-for="Input.NewPassword"></label></th>
                <td><input asp-for="Input.NewPassword" /></td>
            </tr>
            <tr>
                <th><label asp-for="Input.RoleName"></label></th>
                <td>
                    <select asp-for="Input.RoleName" asp-items="Model.RoleNames"></select>
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <th></th>
                <td>
                    <div asp-validation-summary="All"></div>
                    <input type="submit" value="Vytvořit" />
                    <a asp-page="Index" class="button secondary">Storno</a>
                </td>
            </tr>
        </tfoot>
    </table>
</form>