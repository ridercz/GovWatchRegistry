@page
@model LoginModel
@{ this.ViewBag.Title = "Přihlášení"; }
<h2>@this.ViewBag.Title</h2>
<form method="post">
    <table class="form">
        <tbody>
            <tr>
                <th><label asp-for="Input.UserName"></label></th>
                <td><input asp-for="Input.UserName" /></td>
            </tr>
            <tr>
                <th><label asp-for="Input.Password"></label></th>
                <td><input asp-for="Input.Password" /></td>
            </tr>
            <tr>
                <th></th>
                <td>
                    <input asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe"></label>
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <th></th>
                <td>
                    <div asp-validation-summary="All"></div>
                    <input type="submit" value="Odeslat" />
                </td>
            </tr>
        </tfoot>
    </table>
</form>